<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/uv_comment_edit_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white20"
            android:ems="10"
            android:gravity="center_vertical|left"
            android:hint="@string/uv_comment_hint"
            android:inputType="textMultiLine"
            android:minHeight="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/uv_edittext_txt"
            android:textColorHint="@color/text_disabled"
            android:textSize="18sp"
            android:typeface="monospace" />

        <LinearLayout
            android:id="@+id/uv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/uv_header_item_light_no_padding" />

            <EditText
                android:id="@+id/uv_text_field"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white20"
                android:ems="10"
                android:hint="@string/uv_email_address"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/uv_edittext_txt"
                android:textColorHint="@color/text_disabled"
                android:textSize="18sp"
                android:typeface="monospace" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/uv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/uv_header_item_light_no_padding" />

            <EditText
                android:id="@+id/uv_text_field"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white20"
                android:ems="10"
                android:hint="@string/uv_name_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/uv_edittext_txt"
                android:textColorHint="@color/text_disabled"
                android:textSize="18sp"
                android:typeface="monospace" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</ScrollView>